		{
			"name": "Add Object",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Function to generate a unique serial number for the device\r",
							"function generateSerialNumber() {\r",
							"    const prefix = 'SN'; // Prefix for the serial number\r",
							"    const timestamp = Date.now().toString(36); // Current timestamp in base-36\r",
							"    const randomSuffix = Math.random().toString(36).substring(2, 8); // Random string of 6 characters\r",
							"    return `${prefix}-${timestamp}-${randomSuffix}`; // Combining prefix, timestamp, and random suffix\r",
							"}\r",
							"console.log()\r",
							"\r",
							"// Set the generated serial number to an environment variable\r",
							"pm.collectionVariables.set('saleBranchCode', generateSerialNumber());\r",
							"\r",
							"//pm.collectionVariables(\"idObject\",pm.response.body.json().id)\r",
							""
						],
